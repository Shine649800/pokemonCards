extends layout

block content
    include mixins/pokemonCards
    div.contatiner
        div.add-button-row
            a.button.save(href="/add") Add Pokemon
    div.container
        form(action='/' method='get')
            div.form-input
                label(for='type') Type
                select(id='type' name='type' autocomplete='off')
                    each type in types
                        option(vale=type selected = (type === searchPokemon)) #{type}
                div.form-input
                    label(for='random') Random
                    input(type='checkbox' name='random' id='random' checked=searchRandom)
            button.button.save(type='submit') Filter
    div.container
        each pokemon in pokemons
            +pokemonCard(pokemon)
